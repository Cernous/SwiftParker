<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="35dp"
        app:cardElevation="1dp"
        app:cardMaxElevation="2dp"
        android:layout_margin="20dp"
        android:layout_width="350dp"
        android:layout_height="375dp"
        android:layout_centerInParent="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/cardview_w_border">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Placeholder"
                android:id="@+id/dialog_name"
                android:background="@color/white"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/dm_sans_medium"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200 Baker St."
                android:id="@+id/dialog_address"
                android:background="@color/white"
                android:layout_below="@+id/dialog_name"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/dm_sans_medium"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spots Available: 50/70"
                android:background="@color/white"
                android:id="@+id/availabilities"
                android:layout_below="@+id/dialog_address"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/dm_sans_medium"
                android:textSize="18dp" />

            <Button
                android:id="@+id/cancelexit"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:textColor="@color/black"
                android:background="@android:color/transparent"
                android:elevation="0dp"
                android:text="X"
                android:textSize="20sp"
                app:cornerRadius="50dp"
                android:layout_marginRight="10dp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>