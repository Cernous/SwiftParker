<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SwiftPark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#a82d65</item>
        <item name="colorSecondaryVariant">#a82d65</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->

    </style>

    <style name="paragraphText" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/whitneymedium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="header1Text"  parent="paragraphText">
        <item name="android:textSize">32dp</item>
        <item name="android:fontWeight">250</item>
    </style>

    <style name="header2Text"  parent="paragraphText">
        <item name="android:textSize">24dp</item>
        <item name="android:fontWeight">150</item>
    </style>
</resources>